{
  "manifest_version": 3,
  "name": "TOBE Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for improving daily work efficiency with JSON formatter, screenshot tool, and timestamp conversion",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "downloads"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "TOBE Tools"
  },
  "web_accessible_resources": [
    {
      "resources": ["html/json-format.html", "css/json-format.css", "js/json-format.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
